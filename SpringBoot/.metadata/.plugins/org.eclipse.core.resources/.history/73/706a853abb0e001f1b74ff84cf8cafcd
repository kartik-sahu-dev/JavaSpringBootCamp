package com.example.learnspringaop;

import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.boot.CommandLineRunner;
import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;

import com.example.learnspringaop.aopexample.business.BusinessService1;

@SpringBootApplication
public class LearnSpringAopApplication implements CommandLineRunner{

	Logger logger = LoggerFactory.getLogger(getClass());
	
	private BusinessService1 businessService;

	public LearnSpringAopApplication(BusinessService1 businessService) {
		this.businessService = businessService;
	}
	
	public static void main(String[] args) {
		SpringApplication.run(LearnSpringAopApplication.class, args);
	}

	@Override
	public void run(String... args) throws Exception {
		logger.info("value returned is {}",businessService.calculateMax());
	}


}
